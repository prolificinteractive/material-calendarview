<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.prolificinteractive.library.calendarwidget.sample" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".BasicActivity"
            android:label="@string/title_activity_basic"
            android:parentActivityName=".MainActivity" >

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.prolificinteractive.library.calendarwidget.sample.MainActivity" />

        </activity>

        <activity
            android:name=".RangeActivity"
            android:label="@string/title_activity_range"
            android:parentActivityName=".MainActivity" >

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.prolificinteractive.library.calendarwidget.sample.MainActivity" />

        </activity>

        <activity
            android:name=".CustomizeXmlActivity"
            android:label="@string/title_activity_customize_xml"
            android:parentActivityName=".MainActivity" >

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.prolificinteractive.library.calendarwidget.sample.MainActivity" />

        </activity>

        <activity
            android:name=".CustomizeCodeActivity"
            android:label="@string/title_activity_customize_code"
            android:parentActivityName=".MainActivity" >

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.prolificinteractive.library.calendarwidget.sample.MainActivity" />

        </activity>

    </application>

</manifest>
